<div class="row">
  <div class="large-12 columns hero">
  <%= image_tag("heroimg.png") %>
  </div>
</div>

<div class="row entry-message">
  <div class="large-5 large-offset-2 columns">
    <h1>Who Are You?</h1>
    <p>Find your inner superhero</p>
  </div>
  <div class="large-5 columns">
    <%= link_to image_tag("clickhere.png", :class => 'click-me'), user_path %>
  </div>
</div>

<div class="row main superheros">
    <div class="sort-button">     
      <%= link_to 'SHEROES', superheroes_path({gender: "female"}) %> ~
      <%= link_to 'HEROES', superheroes_path({gender: "male"})  %> ~  
      <%= link_to 'ALL', superheroes_path %>
    </div>
    
  <% @superheros.each do |superhero| %>
  <div class="large-4 columns superheros2">
  <div class="img-container">
    <%= link_to image_tag(superhero.image), superhero_path(superhero) %>
  </div>
    <h3> <%= superhero.name %> </h3>
  </div>
  <% end %>
</div>